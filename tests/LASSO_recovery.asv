% Brief L1 recovery test

n = 100;
m = 60;

trials = 1;
s_range = 1:1:30;
errors = [];

options  = IRfista('defaults');
options.shrink = 'on';
options.RegParam = .1;

for i = s_range
    cummulative_error = 0;
    for j = 1:trials
        A = randn(m,n);
        on = randsample(n,i);
        x = zeros(n,1);
        x(on) = rand(i,1);
        b = A * x;
        x_rec = IRfista(A,b, options);
        %x_rec = IRell1(A,b);
        cummulative_error = cummulative_error + norm(x - x_rec);
    end
    errors(end + 1) = cummulative_error/trials;
end
plot(errors);
xlabel("$L